
{
  "rules": {
    "class-name": true,
    "curly": false,
    "eofline": false,
    "forin": false,
    "indent": [false, "spaces"],
    "label-position": false,
    "label-undefined": false,
    "max-line-length": [ false, 140 ],
    "no-any":  false,
    "no-arg": true,
    "no-bitwise": false,
    "no-console": [false,
        "debug",
        "info",
        "time",
        "timeEnd",
        "trace"
    ],
    "no-consecutive-blank-lines": true,
    "no-construct": false,
    "no-debugger": true,
    "no-duplicate-key": true,
    "no-duplicate-variable": false,
    "no-empty": false,
    "no-eval": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": false,
    "no-trailing-comma": false,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-unreachable": true,
    "no-use-before-declare": false,
    "one-line": [false,
        "check-open-brace",
        "check-catch",
        "check-else",
        "check-whitespace"
    ],
    "quotemark": [false, "single"],
    "radix": true,
    "semicolon": true,
    "triple-equals": [ true, "allow-null-check" ],    
    "typedef": [false,
        "call-signature",
        "parameter",
        "property-declaration",
        "variable-declaration",
        "member-variable-declaration"
    ],
    "typedef-whitespace": [true, {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
    }],
    "variable-name": false,
    "whitespace": [false,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
    ],
    "no-static-this": false,
    "bi-duplicate-variable": false,
    "no-equals-nan": true,
    "no-underscore-prefix-for-variables": false,
    "function-return-type-required": false,
    "empty-line-before-comments": false,
    "copyright-check": false
  }
}